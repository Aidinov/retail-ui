{
  "name": "react-ui-screenshot-tests",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "concurrently": "^3.6.0",
    "gemini": "^5.7.2",
    "gemini-sauce": "^1.0.1",
    "html-reporter": "^2.18.1",
    "wait-on": "^2.1.0"
  },
  "scripts": {
    "run-storybook": "yarn workspace retail-ui run storybook:run-serve",
    "run-gemini": "yarn wait && gemini test --reporter vflat",
    "run-gemini:gui": "yarn wait && gemini gui",
    "wait": "yarn wait-on http-get://localhost:6660/",
    "test": "run-p run-storybook run-gemini",
    "test:gui": "run-p run-storybook run-gemini:gui"
  },
  "devDependencies": {
    "dotenv": "^6.0.0",
    "npm-run-all": "^4.1.5"
  }
}
